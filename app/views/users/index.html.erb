<header>
  <% unless @top_page %>
    <nav>
      <ul>
      <ul class="nav-right">
        <% if user_signed_in? %>
          <li><%= link_to "ステータス一覧", statuses_path %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to "マイページ", user_path(current_user) %></li>
          <li><%= link_to "ユーザー一覧", users_path %></li>
        <% else %>
          <li><%= link_to "新規登録", new_user_registration_path %></li>
          <li><%= link_to "ログイン", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  <% end %>
</header>
<div class="container marketing">
  <div class="row d-flex justify-content-center">
    <div class="col-10 mt-5">
      <table class="table text-center">
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.status_id %>
                  <%= link_to user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                <% else %>
                  <%= user.name %>
                <% end %>
              </td>
              <td>
                <% if user.is_followed_by?(current_user) %>
                  <%=link_to user_followers_path(user), method: :delete do %>
                    <button type="button" class="btn btn btn-danger">フォロー解除</button>
                  <% end %>
                <% else %>
                  <%=link_to user_followers_path(user), method: :post do %>
                    <button type="button" class="btn btn btn-primary">フォロー</button>
                  <% end %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

